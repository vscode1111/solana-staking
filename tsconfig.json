{
  "include": [
    "src"
  ],
  "exclude": [
    "node_modules"
  ],
  "compilerOptions": {
    "target": "es2019",
    "module": "esnext",
    "outDir": "lib/esm",
    "declarationDir": "lib/types",
    "noEmit": false,
    "declaration": true,
    "sourceMap": true,
    "noEmitOnError": true,
    "stripInternal": true,
    "moduleResolution": "node",
    "jsx": "preserve",
    "strict": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "isolatedModules": true,


    "typeRoots": [
      "node_modules/@types"
    ],
    /* Paths */
    "paths": {
      "@components": [
        "./src/components"
      ],
      "@components/*": [
        "./src/components/*"
      ],
      "@consts": [
        "./src/consts"
      ],
      "@consts/*": [
        "./src/consts/*"
      ],
      "@context": [
        "./src/context"
      ],
      "@context/*": [
        "./src/consts/*"
      ],
      "@hooks": [
        "./src/hooks"
      ],
      "@hooks/*": [
        "./src/hooks/*"
      ],
      "@services": [
        "./src/services"
      ],
      "@services/*": [
        "./services/*"
      ],
      "@themes": [
        "./src/themes"
      ],
      "@themes/*": [
        "./src/themes/*"
      ],
      "@types": [
        "./src/types"
      ],
      "@types/*": [
        "./src/types/*"
      ],
      "@utils": [
        "./src/utils"
      ],
      "@utils/*": [
        "./src/utils/*"
      ],
      "@views": [
        "./src/views"
      ],
      "@views/*": [
        "./src/views/*"
      ],
    },
  }
}